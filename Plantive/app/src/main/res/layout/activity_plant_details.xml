<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/image_plant"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery" />

    <!-- Plant Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            style="@style/TextAppearance.Plantive.Heading2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_health_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_healthy"
                android:textColor="@color/alert_green"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@color/alert_green"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_water"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/action_water"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/primary_green"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fertilize"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/action_fertilize"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@color/primary_light_green"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_more"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="More"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/primary_green"
            android:textColor="@color/primary_green" />

    </LinearLayout>

    <!-- Care Timeline -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plant_care_timeline"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_care_timeline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

</LinearLayout>
